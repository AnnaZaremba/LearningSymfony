{% extends '::ksiazkakucharska.html.twig' %}
{% block container %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Książka kucharska</h1>
        <div class="starter-template">
            <h2>LOGOWANIE</h2>
        </div>
        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
        <div>
            <div>
                {{ form_widget(form.nazwa, {'attr': {'placeholder': 'Nazwa *', 'class': 'form-control'}}) }}
                <div>{{ form_errors(form.nazwa) }}</div>
                {{ form_widget(form.haslo, {'attr': {'placeholder': 'Hasło *', 'class': 'form-control'}}) }}
                <div>{{ form_errors(form.haslo) }}</div>
            </div>
            <div>
                <h3>
                    <button type="submit" class="btn btn-primary btn-sm">Zaloguj</button>
                </h3>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}