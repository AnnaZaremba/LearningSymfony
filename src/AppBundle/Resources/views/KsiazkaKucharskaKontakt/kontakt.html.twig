{% extends '::ksiazkakucharska.html.twig' %}
{% block container %}
    {% block zdjecie %}
        {% include('::zdjecie.html.twig') %}
    {% endblock %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="starter-template">
            <h2>KONTAKT</h2>
        </div>
        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
        <div>
            <div>
                {{ form_widget(form.imie, {'attr': {'placeholder': 'Imię *', 'class': 'form-control'}}) }}
                <div>{{ form_errors(form.imie) }}</div>
                {{ form_widget(form.email, {'attr': {'placeholder': 'E-mail *', 'class': 'form-control'}}) }}
                <div>{{ form_errors(form.email) }}</div>
                {{ form_widget(form.temat, {'attr': {'placeholder': 'Temat *', 'class': 'form-control'}}) }}
                <div>{{ form_errors(form.temat) }}</div>
                {{ form_widget(form.wiadomosc, {'attr': {'placeholder': 'Wiadomość *', 'class': 'form-control'}}) }}
                <div>{{ form_errors(form.wiadomosc) }}</div>
            </div>
            <div>
                <h3>
                    <button type="submit" class="btn btn-primary">Wyślij wiadomość</button>
                </h3>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}