{% extends '::ksiazkakucharska.html.twig' %}
{% block container %}
    <div class="col-md-offset-2 main">
        <div class="col-md-4" id="kategorie">
            <h2>KATEGORIE</h2>
            {% for kategoria in kategorie %}
                <div>
                    <h4>
                        <a href="{{ path('kategoriaid', { 'id': kategoria.id }) }}">{{ kategoria.nazwa }}</a>
                    </h4>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-8" id="kategorie">
            <h2>PRZEPISY</h2>
            <ul class="list-unstyled">
                {% for przepis in przepisy %}
                    <h4><a href="{{ path('przepisid', { 'id': przepis.id }) }}">{{ przepis.nazwa }}</a></h4>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}