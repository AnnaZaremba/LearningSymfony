{% block przepis %}
    <div class="row">
        <div class="col-xs-5">
            <div class="text-center">
                <h2>{{ przepis.nazwa }}</h2>
            </div>
            <div>
                <h3>Składniki</h3>
                <div>{{ przepis.skladniki|nl2br }}</div>
            </div>
            <div>
                <h3>Wykonanie</h3>
                <div class="text-justify text">{{ przepis.wykonanie|nl2br }}</div>
            </div>
            <div>
                <h3>Źródło</h3>
                <div>{{ przepis.zrodlo }}</div>
            </div>
            <div>
                <h3>Uwagi</h3>
                <div>{{ przepis.uwagi }}</div>
            </div>
            <div>
                <h3>Kategorie</h3>
                {% for kategoria in przepis.kategorie %}
                    <div>
                        <a href="{{ path('kategoriaid', { 'id': kategoria.id }) }}">{{ kategoria.nazwa }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}